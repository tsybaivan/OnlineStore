<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineStore</title>

    <environment include="Development">
        <link href="~/lib/bulma-0.7.5/css/bulma.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">

        <link href="~/lib/bulma-0.7.5/css/bulma.min.css" rel="stylesheet" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>



    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <vc:cart view="Small"></vc:cart>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-item" asp-page="/Admin/Index">
                        Admin
                    </a>
                }

            </div>

            <div class="navbar-end">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-item" asp-controller="Account" asp-action="Logout">Sign Out</a>
                }
                else
                {
                    <a class="navbar-item" asp-page="/Accounts/Login">Sign In</a>
                }

            </div>
        </div>
    </nav>   



    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - OnlineStore - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>



    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
